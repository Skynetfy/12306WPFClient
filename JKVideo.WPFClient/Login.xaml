        <TextBox x:Name="UserName" HorizontalAlignment="Left" Height="23" Margin="139,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="183"/>
        <Label Content="用户名：" HorizontalAlignment="Left" Margin="73,52,0,0" VerticalAlignment="Top" Width="92"/>
        <Label Content="密  码 ：" HorizontalAlignment="Left" Margin="73,102,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PassWord"  HorizontalAlignment="Left" Height="23" Margin="139,104,0,0" VerticalAlignment="Top" Width="183"/>
        <TextBox x:Name="VerCode" HorizontalAlignment="Left" Height="23" Margin="138,172,0,0" VerticalAlignment="Top" Width="94"/>
        <Label Content="验证码：" HorizontalAlignment="Left" Margin="73,169,0,0" VerticalAlignment="Top" Width="65" RenderTransformOrigin="0.569,0.154"/>
        <Button Content="登 录" HorizontalAlignment="Left" Margin="139,242,0,0" VerticalAlignment="Top" Width="94" Click="Login_Click"/>
        <Image x:Name="VerifyCode" HorizontalAlignment="Left" Height="54" Margin="253,155,0,0" VerticalAlignment="Top" Width="99" RenderTransformOrigin="0.323,-0.148"/>

    </Grid>
</Window>
